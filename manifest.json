{
  "manifest_version": 2,

  "name": "Medium stats counter",
  "description": "This extension counts the total views/reads/fans of user's Medium stories",
  "version": "1.0",
  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "scripts": ["event.js"],
    "persistent": true
  },
  "permissions": ["activeTab", "https://ajax.googleapis.com/", "declarativeContent"],
  "content_scripts": [
    {
      "matches": ["*://medium.com/me/stats"],
      "js": ["content.js"]
    }
  ]
}
